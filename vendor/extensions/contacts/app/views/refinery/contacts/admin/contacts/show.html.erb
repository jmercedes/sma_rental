<div id='records'>
  <h2><%= t('.contact') %></h2>
  <table id='contact' class='inquiry'>
      <tr>
        <td>
          <strong>
            <%= t('.name', :default => t('activerecord.attributes.contact.name')) %>
          </strong>
        </td>
        <td>
          <%= @contact.name %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.lastname', :default => t('activerecord.attributes.contact.lastname')) %>
          </strong>
        </td>
        <td>
          <%= @contact.lastname %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.company', :default => t('activerecord.attributes.contact.company')) %>
          </strong>
        </td>
        <td>
          <%= @contact.company %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.email', :default => t('activerecord.attributes.contact.email')) %>
          </strong>
        </td>
        <td>
          <%= @contact.email %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.phone', :default => t('activerecord.attributes.contact.phone')) %>
          </strong>
        </td>
        <td>
          <%= @contact.phone %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.prefered_contact', :default => t('activerecord.attributes.contact.prefered_contact')) %>
          </strong>
        </td>
        <td>
          <%= @contact.prefered_contact %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.address', :default => t('activerecord.attributes.contact.address')) %>
          </strong>
        </td>
        <td>
          <%= @contact.address %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.address_2', :default => t('activerecord.attributes.contact.address_2')) %>
          </strong>
        </td>
        <td>
          <%= @contact.address_2 %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.state', :default => t('activerecord.attributes.contact.state')) %>
          </strong>
        </td>
        <td>
          <%= @contact.state %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.city', :default => t('activerecord.attributes.contact.city')) %>
          </strong>
        </td>
        <td>
          <%= @contact.city %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.zip_code', :default => t('activerecord.attributes.contact.zip_code')) %>
          </strong>
        </td>
        <td>
          <%= @contact.zip_code %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.country', :default => t('activerecord.attributes.contact.country')) %>
          </strong>
        </td>
        <td>
          <%= @contact.country %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.looking', :default => t('activerecord.attributes.contact.looking')) %>
          </strong>
        </td>
        <td>
          <%= @contact.looking %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.budget', :default => t('activerecord.attributes.contact.budget')) %>
          </strong>
        </td>
        <td>
          <%= @contact.budget %>
        </td>
      </tr>
      <tr>
        <td valign='top'>
          <strong>
            <%= t('.comments', :default => t('activerecord.attributes.contact.comments')) %>
          </strong>
        </td>
        <td>
          <p style='margin-top: 0px'>
            <% @contact.message.to_s.gsub("\r\n\r\n", "\r\n").split("\r\n").each_with_index do |sentence, index| %>
              <%=raw "</p><p>" unless index == 0 %>
              <%= sentence %>
            <% end %>
          </p>
        </td>
      </tr>
  </table>
</div>
<div id='actions'>
  <h2><%= t('.details')%></h2>
  <p>
    <strong><%= t('.age') %>:</strong> <%= time_ago_in_words(@contact.created_at) %>
  </p>
  <h2><%= t('.actions') %></h2>
  <ul>
    <li>
      <%= link_to t('.back_to_all_contacts'), refinery.url_for(:action => 'index'),
                   :class => "back_icon" %>
    </li>
    <li>
      <%= link_to t('delete', :scope => 'refinery.contacts.admin.contacts'),
                  refinery.contacts_admin_contact_path(@contact),
                  :class => 'delete_icon no-tooltip confirm-delete',
                  :title => t('delete', :scope => 'refinery.contacts.admin.contacts'),
                  :'data-confirm' => t('message', :scope => 'refinery.admin.delete', :title => @contact.name),
                  :'data-method' => "delete" %>
    </li>
  </ul>
</div>
